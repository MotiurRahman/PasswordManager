<Alloy>
	<Window id="detailWin" class="container" title="Details">

		<ScrollView id="sv">
			<!-- wrapper -->

			<View id="card" layout="vertical" width="Ti.UI.FILL" height="Ti.UI.SIZE">

				<Label id="title" class="header"/>

				<View class="row">
					<Label class="fieldLabel" text="Description"/>
					<Label id="desc" class="fieldValue"/>
				</View>

				<View class="row">
					<Label class="fieldLabel" text="Email"/>
					<Label id="email" class="fieldValue"/>
				</View>

				<View class="row">
					<Label class="fieldLabel" text="Password"/>
					<Label id="pass" class="fieldValue"/>
				</View>

				<View class="row">
					<Label class="fieldLabel" text="Account"/>
					<Label id="account" class="fieldValue"/>
				</View>

				<View class="row">
					<Label class="fieldLabel" text="Pin"/>
					<Label id="pin" class="fieldValue"/>
				</View>

				<View class="row">
					<Label class="fieldLabel" text="Website"/>
					<Label id="site" class="fieldLink" onClick="openURL"/>
				</View>


				<View height="60" id="adView" width="Ti.UI.FILL"/>
			</View>


		</ScrollView>

		<View class="btnRow">

			<Button title="Delete" class="btnDanger" onClick="deleteBtn"/>
			<Button title="Close" class="btnGhost" onClick="close"/>
			<Button title="Update" class="btnPrimary" onClick="update"/>
		</View>


	</Window>
</Alloy>
